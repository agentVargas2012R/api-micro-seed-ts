{
  "name": "sampletypescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "build:watch": "tsc -p ./tsconfig.json --watch",
    "format": "npx prettier --write \"src/**/*ts\"",
    "release:patch": "npm build && npm version patch",
    "release:minor": "npm build && npm version minor",
    "release:major": "npm build && npm version major",
    "test": "mocha",
    "test:watch": "mocha -r ts-node/register --watch --watch-files \"src/**/*.ts,test/**/*.test.ts\" --recursive --extensions 'ts'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "husky": "^7.0.4",
    "mocha": "^9.2.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
