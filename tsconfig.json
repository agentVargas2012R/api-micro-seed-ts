{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "ES2020",
      "dom"
    ],
    "strict": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["mocha", "chai"],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}